{
  "manifest_version": 3,
  "name": "AI Code Analyzer",
  "version": "0.1",
  "description": "Get the best code review possible with a finely-tuned GPT",
  "permissions": ["activeTab", "storage"],
  "externally_connectable": {
    "matches": ["https://ai-reviewer-server.onrender.com/*"]
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Get Code Review"
  },
  "content_scripts": [
    {
      "js": ["content.js"],
      "matches": ["https://*.github.com/*"]
    }
  ]
}
